---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;

// Technology icon mapping
const techIcons: Record<string, string> = {
  "Python": "logos:python",
  "JavaScript": "logos:javascript",
  "TypeScript": "logos:typescript-icon",
  "FastAPI": "simple-icons:fastapi",
  "RAG": "mdi:brain",
  "Snowflake": "simple-icons:snowflake",
  "OpenAI API": "simple-icons:openai",
  "React": "logos:react",
  "PostgreSQL": "logos:postgresql",
  "Data Validation": "mdi:check-decagram",
  "TensorFlow": "logos:tensorflow",
  "ARIMA": "mdi:chart-line",
  "Scikit-learn": "devicon:scikitlearn",
  "SciPy": "devicon:scipy",
  "Statistics": "mdi:chart-bell-curve",
  "Logistic Regression": "mdi:function-variant",
  "Feature Engineering": "mdi:cog",
  "Swift": "logos:swift",
  "Express": "skill-icons:expressjs-light",
  "Firebase": "logos:firebase",
  "SwiftUI": "logos:swift",
  "AI Agents": "mdi:robot",
  "Blockchain": "cryptocurrency:btc",
  "NLP": "mdi:text-search",
  "Gemini API": "simple-icons:google",
  "Claude API": "simple-icons:anthropic",
  "Web Scraping": "mdi:web",
  "SQL": "vscode-icons:file-type-sql",
  "PySpark": "logos:apache-spark",
  "PowerBI": "logos:microsoft-power-bi",
  "Azure": "logos:azure-icon",
  "AWS": "logos:aws",
  "Grok API": "mdi:brain-frozen",
  "Pinecone": "simple-icons:pinecone",
  "Streamlit": "simple-icons:streamlit",
  "Docker": "logos:docker-icon",
  "Chrome APIs": "logos:chrome",
  "Keras": "simple-icons:keras",
  "Model Optimization": "mdi:tune",
};

function getTechIcon(skill: string): string {
  return techIcons[skill] || "mdi:code-braces";
}

// Technologies to display as text badges instead of icons
const textBadgeTechs = ["Grok API", "SciPy", "Pinecone", "Statistics", "Data Validation", "Feature Engineering", "Logistic Regression"];

function shouldShowAsTextBadge(skill: string): boolean {
  return textBadgeTechs.includes(skill);
}
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-100">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative glass-container glass-container--project">
                    <div class="glass-filter"></div>
                    <div class="glass-overlay"></div>
                    <div class="glass-specular"></div>
                    <Component
                      {...linkProps}
                      class={`glass-content glass-content--project block relative w-full transition-all duration-300 ${
                        project.link
                          ? "cursor-pointer"
                          : ""
                      }`}
                    >
                      {project.link ? (
                        <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-700 rounded-lg text-white transition-all duration-300 group-hover:bg-gray-600">
                          <svg
                            class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      ) : (
                        <div class="absolute top-3 right-4 sm:top-4 sm:right-6 md:top-6 md:right-8 flex items-center gap-2">
                          <span class="text-xs sm:text-sm text-gray-400 font-medium">Proprietary Code</span>
                          <div class="w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-700/50 rounded-lg text-gray-400">
                            <svg
                              class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                              />
                            </svg>
                          </div>
                        </div>
                      )}

                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-100 mt-1">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-base sm:text-lg text-gray-300 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap items-center gap-2 sm:gap-3 pt-2">
                            {project.skills.map((skill) =>
                              shouldShowAsTextBadge(skill) ? (
                                <span class="px-3 py-1.5 bg-gray-700/50 border border-gray-600 text-gray-300 rounded-full text-xs font-medium">
                                  {skill}
                                </span>
                              ) : (
                                <div class="flex flex-col items-center gap-1 opacity-80 hover:opacity-100 transition-opacity duration-200">
                                  <div class="h-9 sm:h-10 flex items-center justify-center">
                                    <iconify-icon
                                      icon={getTechIcon(skill)}
                                      class="text-3xl sm:text-4xl"
                                    ></iconify-icon>
                                  </div>
                                  <span class="text-xs text-gray-400">{skill}</span>
                                </div>
                              )
                            )}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
