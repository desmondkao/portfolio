---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;

// Technology icon mapping
const techIcons: Record<string, string> = {
  "Python": "logos:python",
  "JavaScript": "logos:javascript",
  "TypeScript": "logos:typescript-icon",
  "FastAPI": "simple-icons:fastapi",
  "Flask": "skill-icons:flask-light",
  "RAG": "mdi:brain",
  "Snowflake": "simple-icons:snowflake",
  "OpenAI API": "simple-icons:openai",
  "React": "logos:react",
  "SQL": "vscode-icons:file-type-sql",
  "Azure": "logos:azure-icon",
  "NLP": "mdi:text-search",
  "Scikit-learn": "devicon:scikitlearn",
  "Machine Learning": "mdi:brain",
  "Web Scraping": "mdi:web",
  "HuggingFace": "simple-icons:huggingface",
  "TensorFlow": "logos:tensorflow",
  "Keras": "simple-icons:keras",
};

function getTechIcon(tech: string): string {
  return techIcons[tech] || "mdi:code-braces";
}

// Technologies to display as text badges instead of icons
const textBadgeTechs = ["Machine Learning", "Web Scraping"];

function shouldShowAsTextBadge(tech: string): boolean {
  return textBadgeTechs.includes(tech);
}
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-100">
              Experience
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.experience.map((exp, index) => (
                <div class="relative mb-12 last:mb-0">
                  {/* Timeline dot at top of card */}
                  <div
                    class="absolute left-1/2 -top-2 w-4 h-4 bg-gray-900 border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300"
                    style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                  />

                  {/* Connecting line below card */}
                  {index < siteConfig.experience.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 bg-gray-700 -translate-x-1/2 translate-y-full z-10" />
                  )}

                  {/* Experience card */}
                  <div class="glass-container glass-container--experience">
                    <div class="glass-filter"></div>
                    <div class="glass-overlay"></div>
                    <div class="glass-specular"></div>
                    <div class="glass-content glass-content--experience">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 w-full">
                        <div>
                          <h3 class="text-lg sm:text-xl font-semibold text-gray-100">
                            {exp.title}
                          </h3>
                          <p
                            class="text-base sm:text-lg"
                            style={`color: ${siteConfig.accentColor}`}
                          >
                            {exp.company}
                          </p>
                        </div>
                        <span class="text-xs sm:text-sm text-gray-400 mt-2 sm:mt-0">
                          {exp.dateRange}
                        </span>
                      </div>

                      <ul class="space-y-2 w-full">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start">
                            <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-500 mt-2 mr-3 flex-shrink-0" />
                            <span class="text-sm sm:text-base text-gray-300">
                              {bullet}
                            </span>
                          </li>
                        ))}
                      </ul>

                      {exp.technologies && exp.technologies.length > 0 && (
                        <div class="flex flex-wrap items-center gap-2 sm:gap-3 pt-4 mt-4 border-t border-gray-700">
                          {exp.technologies.map((tech) =>
                            shouldShowAsTextBadge(tech) ? (
                              <span class="px-3 py-1.5 bg-gray-700/50 border border-gray-600 text-gray-300 rounded-full text-xs font-medium">
                                {tech}
                              </span>
                            ) : (
                              <div class="flex flex-col items-center gap-1 opacity-80 hover:opacity-100 transition-opacity duration-200">
                                <div class="h-9 sm:h-10 flex items-center justify-center">
                                  <iconify-icon
                                    icon={getTechIcon(tech)}
                                    class="text-3xl sm:text-4xl"
                                  ></iconify-icon>
                                </div>
                                <span class="text-xs text-gray-400">{tech}</span>
                              </div>
                            )
                          )}
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
