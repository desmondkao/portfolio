---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-100"
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-300">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-4 space-y-6">
          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-3">Languages</h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.languages.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-800 text-gray-200 rounded-full text-sm sm:text-base font-medium hover:bg-gray-700 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-3">Cloud & Infrastructure</h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.cloud.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-800 text-gray-200 rounded-full text-sm sm:text-base font-medium hover:bg-gray-700 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-3">Frameworks & Libraries</h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.frameworks.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-800 text-gray-200 rounded-full text-sm sm:text-base font-medium hover:bg-gray-700 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-3">AI & Machine Learning</h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.aiml.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-800 text-gray-200 rounded-full text-sm sm:text-base font-medium hover:bg-gray-700 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-3">Tools & Databases</h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.tools.map((skill) => (
                  <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-gray-800 text-gray-200 rounded-full text-sm sm:text-base font-medium hover:bg-gray-700 transition-colors duration-200">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
